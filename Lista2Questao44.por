programa
{
   funcao inicio()
   {
      cadeia nome
      real salario
      escreva("Digite o nome do funcionário: ")
      leia(nome)

      escreva("Digite o salário do funcionário: ")
      leia(salario)

      escreva("Funcionário: ", nome, "\n")
      escreva("Salário: R$ ", salario, "\n")
      escreva("Obrigado, ", nome, ", por seu trabalho!\n")
   }
}
